generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum PostType {
  TEXT
  IMAGE
  VIDEO
}

model users {
  user_id String @id @default(uuid())
  first_name String? 
  last_name String?
  username String @unique
  email String @unique
  password String
  role Role
  created_at DateTime @default(now())

  posts posts[]
  posts_comments post_comments[] @relation("UserComments")
}

model posts {
  post_id String @id @default(uuid())
  post_owner String
  type PostType
  detail String?
  image_url String?
  status String?
  lat Float?
  lng Float?
  created_at DateTime @default(now())

  owner users @relation(fields: [post_owner], references: [user_id])
  comments post_comments[]
}

model post_comments {
  comment_id String @id @default(uuid())
  post_id String
  comment_owner String
  comment String
  image_url String?
  created_at DateTime @default(now())

  owner users @relation("UserComments", fields: [comment_owner], references: [user_id])
  post posts @relation(fields: [post_id], references: [post_id])
}